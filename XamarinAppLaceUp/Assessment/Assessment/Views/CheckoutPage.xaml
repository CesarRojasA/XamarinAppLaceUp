<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Assessment.Views.CheckoutPage"
             x:Name="Checkout"
             Title="Checkout">
    <StackLayout>
        <Label 
            HorizontalOptions="Center"
            Margin="0,10,0,0"
            Text="2069 - ARIA RESORT AND CASINO" 
            FontSize="Large"/>

        <StackLayout
            BackgroundColor="#D5D5D5"
            Orientation="Horizontal"
            Padding="10">
            <StackLayout>
                <Label
                    Text="{Binding Checkout.Lines, StringFormat= 'Lines: {0}'}"></Label>
                <Label
                    Text="{Binding Checkout.Quantity, StringFormat= 'Quantity: {0}'}"></Label>
                <Label
                    Text="{Binding Checkout.Term, StringFormat= 'Term: {0}'}"></Label>
            </StackLayout>
            <StackLayout
                HorizontalOptions="CenterAndExpand">
                <Label
                    Text="{Binding Checkout.Subtotal, StringFormat= 'Subtotal: {0:c}'}"></Label>
                <Label
                    Text="{Binding Checkout.Discount, StringFormat= 'Discount: {0:c}'}"></Label>
            </StackLayout>
            <StackLayout>
                <Label
                    Text="{Binding Checkout.Tax, StringFormat= 'Tax: {0:c}'}"></Label>
                <Label
                    Text="{Binding Checkout.Total, StringFormat= 'Total: {0:c}'}"></Label>
            </StackLayout>
        </StackLayout>

        <CollectionView 
            ItemsSource="{Binding Checkout.Products}"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout 
                        BackgroundColor="#FFFFFF"
                        Orientation="Horizontal"
                        HorizontalOptions="Fill"
                        Margin="0,3"
                        Padding="3">
                        <Image 
                            Source="{Binding ImageUrl}"
                            HeightRequest="100"
                            WidthRequest="100"/>
                        <StackLayout
                            VerticalOptions="Center">
                            <Label 
                                Text="{Binding Name}" 
                                FontSize="Subtitle"
                                FontAttributes="Bold"
                                VerticalOptions="Center"/>
                            <Label 
                                Text="{Binding Price, StringFormat='Price: {0:C}'}"
                                VerticalOptions="Center"/>
                        </StackLayout>
                        <StackLayout
                            Spacing="0"
                            HorizontalOptions="EndAndExpand">

                            <Label
                                Text="{Binding Quantity, StringFormat='Quantity: {0}'}"
                                HorizontalOptions="Center"></Label>

                            <StackLayout
                                Orientation="Horizontal">
                                <Button 
                                    Text="-" 
                                    WidthRequest ="40"
                                    Command="{Binding BindingContext.SubtractQuantityCommand, Source={x:Reference Name=Checkout}}" 
                                    CommandParameter="{Binding .}"/>
                                <Button 
                                    Text="+" 
                                    WidthRequest ="40"
                                    Command="{Binding BindingContext.AddQuantityCommand, Source={x:Reference Name=Checkout}}" 
                                    CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>